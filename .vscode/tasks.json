{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "test",
      "type": "shell",
      "command": "task test",
      "problemMatcher": [
        "$go"
      ]
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "task lint",
      "problemMatcher": [
        "$go"
      ]
    },
    {
      "label": "test all (with coverage report)",
      "type": "shell",
      "command": "task test-cover",
      "problemMatcher": [
        "$go"
      ]
    },
  ]
}
